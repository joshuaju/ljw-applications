<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import org.controlsfx.control.SearchableComboBox?>
<TitledPane animated="false" collapsible="false" focusTraversable="false" text="%transaction"
            xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="de.ljw.aachen.client.controller.MakeTransactionController">
    <VBox spacing="20.0">

        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <RadioButton fx:id="rbDeposit" mnemonicParsing="false" text="%deposit">
                <toggleGroup>
                    <ToggleGroup fx:id="tgTransaction"/>
                </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="rbWithdraw" mnemonicParsing="false" text="%withdrawal" toggleGroup="$tgTransaction"/>
            <RadioButton fx:id="rbTransfer" mnemonicParsing="false" text="%transfer" toggleGroup="$tgTransaction"/>
        </HBox>
        <TextField id="tfAmount" fx:id="tfAmount" promptText="%enter.amount"/>
        <SearchableComboBox fx:id="cbReceivers" disable="true" maxWidth="1.7976931348623157E308"
                            promptText="%select.receiver"/>
        <HBox alignment="CENTER" spacing="10.0">
            <CheckBox fx:id="cbOverdraw"/>
            <Label text="%enable.overdraw" disable="${cbOverdraw.disabled}"/>
            <Button fx:id="btnApply" focusTraversable="false" defaultButton="true" mnemonicParsing="false"
                    onAction="#onApply" text="%apply"/>
            <Button fx:id="btnReset" focusTraversable="false" cancelButton="true" mnemonicParsing="false"
                    onAction="#onReset" text="%reset"/>
        </HBox>
    </VBox>
</TitledPane>
