<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox focusTraversable="false" spacing="20.0" xmlns="http://javafx.com/javafx/10.0.2-internal"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="de.ljw.aachen.client.controller.TransactionsOverviewController">
    <BorderPane>
        <left>
            <VBox>
                <Label fx:id="lblFirstName">
                    <font>
                        <Font name="System Bold" size="16.0"/>
                    </font>
                </Label>
                <Label fx:id="lblLastName">
                    <font>
                        <Font name="System Bold" size="16.0"/>
                    </font>
                </Label>
            </VBox>
        </left>
        <center>
            <Button fx:id="btnMakeTransaction" mnemonicParsing="true" minHeight="-Infinity" minWidth="-Infinity"
                    onAction="#onMakeTransaction" text="%make.transaction" AnchorPane.rightAnchor="0.0"/>
        </center>
        <right>
            <HBox alignment="CENTER_LEFT" spacing="10.0" AnchorPane.leftAnchor="0.0">
                <Label focusTraversable="false" text="%balance">
                    <font>
                        <Font name="System Bold" size="16.0"/>
                    </font>
                </Label>
                <Label fx:id="lblTotalBalance" focusTraversable="false">
                    <font>
                        <Font name="System Bold" size="16.0"/>
                    </font>
                </Label>
            </HBox>
        </right>
    </BorderPane>
    <TableView fx:id="tvTransactions" focusTraversable="false" tableMenuButtonVisible="true" VBox.vgrow="ALWAYS">
        <placeholder>
            <Label text="%no.transactions"/>
        </placeholder>
        <columns>
            <TableColumn fx:id="tcDate" prefWidth="75.0" text="%date"/>
            <TableColumn fx:id="tcDescription" prefWidth="75.0" text="%description"/>
            <TableColumn fx:id="tcAmount" prefWidth="75.0" text="%amount"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>
</VBox>
