<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<MenuBar xmlns="http://javafx.com/javafx"
         xmlns:fx="http://javafx.com/fxml"
         fx:controller="de.ljw.aachen.client.controller.MenuController">

    <Menu mnemonicParsing="false" text="%actions">
        <MenuItem text="%action.cash.up" onAction="#onCashUp"/>
        <MenuItem text="%action.list.balance" onAction="#onListBalance"/>
        <Menu mnemonicParsing="false" text="%action.export">
            <MenuItem text="%action.export.transactions" onAction="#onExportTransactions"/>
            <MenuItem text="%action.export.balances" onAction="#onExportBalances"/>
        </Menu>
        <MenuItem text="%action.import" onAction="#onImport"/>
    </Menu>

</MenuBar>
